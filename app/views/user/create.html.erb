<div class="login">
  <img src="/ELL75_yousyohondana20120620_TP_V.jpg" alt="本">
  <div class="container">
    <div class="info">
      <% if @error_message%>
        <%= @error_message %>
      <% end %>
      <% @user.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      <%= form_tag("/user/new") do %>
        <h4>ユーザー名</h4>
        <input name="name"></input>
        <h4>メールアドレス</h4>
        <input name="email"></input>
        <h4>Password</h4>
        <input name="password"></input>
        <br></br>
        <input class="btn" type="submit" value="新規登録">
      <% end %>
    </div>
  </div>
</div>
